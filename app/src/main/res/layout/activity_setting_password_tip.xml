<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:orientation="vertical"
  >


  <TextView
    android:id="@+id/btn_setting_password_title"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="16dp"
    android:alpha="0.7"
    android:gravity="center"
    android:text="@string/password_setting"
    android:textColor="@color/black"
    android:textSize="22sp" />

  <TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="7dp"
    android:alpha="0.7"
    android:gravity="center"
    android:paddingLeft="40dp"
    android:paddingRight="40dp"
    android:text="@string/password_setting_tip"
    android:textColor="@color/black_80_opacity"
    android:textSize="14sp" />

  <ImageView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginTop="120dp"
    android:src="@drawable/password_lock" />


  <View
    android:layout_width="0dp"
    android:layout_height="0dp"
    android:layout_weight="1" />

  <Button
    android:id="@+id/btn_setting_password_clear"
    android:layout_width="match_parent"
    android:layout_height="44dp"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    android:layout_marginBottom="15dp"
    android:gravity="center"
    android:text="清除密码"
    tools:visibility="visible"
    android:visibility="gone"
    android:textColor="#FFFFFF"
    android:textSize="16sp" />

  <Button
    android:id="@+id/btn_setting_password_next_frag"
    android:layout_width="match_parent"
    android:layout_height="44dp"
    android:gravity="center"
    android:text="设置密码"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    android:textColor="#FFFFFF"
    android:layout_marginBottom="50dp"
    android:textSize="16sp" />



</LinearLayout>
