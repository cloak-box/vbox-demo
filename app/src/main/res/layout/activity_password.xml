<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:orientation="vertical">

  <com.xuexiang.xui.widget.actionbar.TitleBar
    android:id="@+id/title_bar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:tb_actionTextSize="15sp" />

  <include
    android:id="@+id/activity_setting_password_tip_frag"
    layout="@layout/activity_setting_password_tip"
    android:layout_width="match_parent"
    android:layout_height="match_parent" />

  <include
    android:id="@+id/activity_setting_password_frag"
    layout="@layout/activity_setting_password"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:visibility="gone" />

</LinearLayout>
