<?xml version="1.0" encoding="utf-8"?>

<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:orientation="vertical"
  android:paddingLeft="12dp">

  <TextView
    android:id="@+id/tv_sort_letter"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="12dp"
    android:paddingBottom="24dp"
    android:textStyle="bold"
    tools:text="A" />

  <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:id="@+id/rl_add_app"
    android:background="?attr/selectableItemBackground"
    android:paddingTop="18dp"
    android:paddingRight="5dp"
    android:paddingLeft="5dp">

    <androidx.appcompat.widget.AppCompatImageView
      android:id="@+id/img_app_icon"
      android:layout_width="48dp"
      android:layout_height="48dp" />


    <TextView
      android:id="@+id/tv_app_name"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginLeft="10dp"
      android:layout_toRightOf="@id/img_app_icon"
      android:text="贝壳找房" />

    <TextView
      android:id="@+id/tv_app_package_name"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_below="@id/tv_app_name"
      android:layout_alignBottom="@id/img_app_icon"
      android:layout_marginLeft="10dp"
      android:layout_toRightOf="@id/img_app_icon"
      android:gravity="bottom"
      android:text="贝壳找房" />

    <Button
      android:clickable="false"
      android:id="@+id/btn_add_app"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignParentRight="true"
      android:layout_centerVertical="true"
      android:text="添加" />

    <include
      android:layout_height="2px"
      android:layout_toLeftOf="@+id/btn_add_app"
      android:layout_marginTop="18dp"
      android:layout_marginRight="12dp"
      android:layout_alignLeft="@+id/tv_app_package_name"
      android:layout_below="@+id/tv_app_package_name"
      android:layout_width="match_parent"
      layout="@layout/view_divider_line" />
  </RelativeLayout>


</androidx.appcompat.widget.LinearLayoutCompat>

